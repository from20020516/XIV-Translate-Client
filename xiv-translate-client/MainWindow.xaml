<Window
  x:Class="xivTranslate.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:xivTranslate"
  mc:Ignorable="d"
  Topmost="True"
  WindowStyle="None"
  Background="Transparent"
  AllowsTransparency="True"
  ResizeMode="CanResizeWithGrip"
  Title="MainWindow" Height="300" Width="600">

  <Grid>
    <Border
      Panel.ZIndex="-1"
      Background="Black"
      CornerRadius="4"
      Opacity="0.4" />

    <Grid Margin="12">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <TextBox
        Grid.Row="1"
        Foreground="White"
        BorderThickness="0"
        Background="Transparent"
        VerticalScrollBarVisibility="Auto"
        Margin="0 5 0 5"
        TextWrapping="Wrap"
        x:Name="LogTextBox"
        AcceptsReturn="True"
        FontSize="15"
        IsReadOnly="True" />
    </Grid>
  </Grid>
</Window>
